    "node-hook": "^1.0.0"
  },
  "devDependencies": {
    "@babel/types": "^7.25.6",
    "@types/debug": "^4.1.12",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.8",
    "@types/node-hook": "^1.0.3",
    "mocha": "^10.7.3",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
